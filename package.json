  },
  "author": "sagargajare",
  "license": "ISC",
  "devDependencies": {
    "husky": "^4.3.8",
    "microbundle": "^0.15.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "isomorphic-unfetch": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:fix && git add -A ."
    }
  }
}
